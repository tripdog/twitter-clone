extends layout.pug 

block body 
    div.max-w-md.w-full
      h2.mt-6.text-center.text-3xl.leading-9.font-extrabold.text-gray-900
        | Post a message
      form(action='/post' method='POST')
        div
          div(class='sm:mt-5 mt-6')
            div
              div.mt-6(class='sm:mt-5 sm:pt-5')
                .mt-1(class='sm:mt-0 sm:col-span-2')
                  .max-w-lg.flex.rounded-md.shadow-sm
                    textarea#about.form-textarea.block.w-full.transition.duration-150.ease-in-out(rows='3', class='sm:text-sm sm:leading-5' name="message" required='required')
              .flex.justify-end.mt-8
                span.ml-3.inline-flex.rounded-md.shadow-sm
                  a.py-2.px-4.border-white.rounded-md.text-sm.leading-5.font-medium.text-white.transition.duration-150.ease-in-out.bg-blue-600(type='button', class='hover:text-white focus:outline-none focus:border-white focus:shadow-outline-white active:bg-white active:text-white', href='/')
                    | Back
                span.ml-3.inline-flex.rounded-md.shadow-sm
                  button.inline-flex.justify-center.py-2.px-4.border.border-transparent.text-sm.leading-5.font-medium.rounded-md.text-white.bg-blue-600.transition.duration-150.ease-in-out(type='submit', class='hover:bg-blue-500 focus:outline-none focus:border-blue-700 focus:shadow-outline-blue active:bg-blue-700')
                    | Send